<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<%= render "shared/search-bar" %>

<% if @searched == true %>
  <h2 class="text-center mb-3">Here are your results:</h2>
<% end %>

<% if @articles.present? %>
  <table class="text-center m-auto">
    <thead>
      <tr>
        <th>Title</th>
        <th>Source</th>
        <th>Reading time</th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= link_to article.title, article %></td>
          <td><%= article.source %></td>
          <td><%= article.estimated_time %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h4 class="text-center">No articles found</h3>
<% end %>

<br>
<% if @searched == true %>
  <%= link_to 'Go back to all articles', root_path %>
<% end %>
<br>
<%= link_to 'New Article', new_article_path %>
